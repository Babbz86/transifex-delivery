{
  "name": "transifex-delivery",
  "version": "0.15.0",
  "description": "Transifex Content Delivery Service",
  "keywords": [
    "transifex",
    "i18n",
    "l10n",
    "localization"
  ],
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "eslint": "eslint src/",
    "start": "node ./src/index.js",
    "start-web": "node ./src/index.js --only=web",
    "start-worker": "node ./src/index.js --only=worker",
    "start-dev": "node ./node_modules/nodemon/bin/nodemon -L -e js,yml --watch ./src --watch ./config ./src/index.js",
    "start-debugger": "node --inspect-brk=0.0.0.0 ./src/index.js",
    "test": "NODE_ENV=test nyc --reporter=text --all --reporter=html mocha --timeout 5000 --exit \"./tests/**/*.spec.js\""
  },
  "engines": {
    "node": ">=14"
  },
  "author": "Transifex",
  "homepage": "https://github.com/transifex/transifex-delivery",
  "license": "Apache-2.0",
  "dependencies": {
    "@sentry/node": "^6.11.0",
    "aws-sdk": "^2.974.0",
    "axios": "^0.21.1",
    "axios-retry": "^3.1.9",
    "body-parser": "^1.19.0",
    "bull": "^3.29.0",
    "chai-http": "^4.3.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dayjs": "^1.10.6",
    "express": "^4.17.1",
    "express-prom-bundle": "^6.4.1",
    "glob": "^7.1.7",
    "ioredis": "^4.27.8",
    "joi": "^14.3.1",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "nconf": "^0.11.3",
    "nconf-yaml": "^1.0.2",
    "newrelic": "^8.1.0",
    "node-cache": "^5.1.2",
    "prom-client": "^13.2.0",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "winston-transport": "^4.4.0",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.24.1",
    "mocha": "^9.1.0",
    "nock": "^13.1.2",
    "nodemon": "^2.0.12",
    "nyc": "^15.1.0",
    "sinon": "^11.1.2",
    "supertest": "^6.1.6"
  }
}
